<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical" >
<RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/title_bar"
        android:gravity="center_vertical">
        
        <Button
            	android:id="@+id/login_reback_btn"
            	android:layout_width="70dp"
            	android:layout_height="wrap_content"
            	android:layout_centerVertical="true"
            	android:text="返回"
            	android:textSize="14sp"
            	android:textColor="#fff"
            	android:onClick="login_back"
            	android:clickable="true"
           		android:background="@drawable/title_btn_back"/> 
        

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="详细任务"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="0dp" >

        <ImageView
            android:id="@+id/add_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:padding="8dp"
            android:scaleType="matrix"
            android:src="@drawable/xiaohei" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="95dp"
            android:padding="15dp"
            android:text="悬赏名："
            android:textColor="#ff0000"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/xuanshang_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="170dp"
            android:padding="15dp"
            android:text="拿快递"
            android:textColor="#ff0000"
            android:textSize="18sp" />

        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="95dp"
            android:padding="15dp"
            android:text="任务等级："
            android:textColor="#ff0000"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/xuanshang_lavel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="180dp"
            android:padding="15dp"
            android:text="A级任务"
            android:textColor="#ff0000"
            android:textSize="16sp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_preference_single_normal"
        android:clickable="true"
        android:gravity="center_horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="悬赏金额："
            android:textColor="#000000"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/xuanshang_money1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="3元"
            android:textColor="#000000"
            android:textSize="18sp" />
        
    </LinearLayout>
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_preference_single_normal"
        android:clickable="true"
        android:gravity="center_horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="发布时间："
            android:textColor="#000000"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/xuanshang_starttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="2014/12/4  01：43"
            android:textColor="#000000"
            android:textSize="18sp" />
        
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_preference_single_normal"
        android:clickable="true"
        android:gravity="center_horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="结束时间："
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/xuanshang_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="2小时"
            android:textColor="#000000"
            android:textSize="18sp" />
        
    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="内容摘要:"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textSize="18sp" />
    <TextView
        android:id="@+id/xuanshang_text"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/ic_preference_single_normal"
            android:text="帮我去南门拿快递，时间是下午5点。圆通快递，小黑。电话是：13570959179"
            android:gravity="left"
            android:textColor="#000000"
            android:textSize="18sp" />
    <Button
        android:id="@+id/button4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_style_green"
        android:gravity="center"
        android:onClick="jieshou"
        android:text="接受任务"
        android:textColor="#ffffff"
        android:textSize="18sp" />
    
    

</LinearLayout>